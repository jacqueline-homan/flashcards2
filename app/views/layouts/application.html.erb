<!DOCTYPE html>
<html>
<head>
  <title>Flashcards2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div>
  	<% if signed_in? %>
    Welcome <%= current_user.email %>
    <%= link_to "Logout", session_path, method: :delete %><br />
    <% else %>
      <%= link_to "Login", new_session_path %>
      <%= link_to image_tag("authbuttons/twitter_32.png", :size => "32x32"), "/users/auth/twitter", :id => 'twitter_login' %>
      <%= link_to image_tag("authbuttons/facebook_32.png", :size => "32x32"), "/users/auth/facebook", :id => 'facebook_login' %>
      <%= link_to image_tag("authbuttons/github_32.png", :size => "32x32"), "/users/auth/github", :id => 'github_login' %>
      <%= link_to image_tag("authbuttons/linkedin_32.png", :size => "32x32"), "/users/auth/linkedin", :id => 'linkedin_login' %> Or sign up here:
      <%= link_to "Sign up", new_user_path %>
    <% end %>
  </div>

<%= yield %>

</body>
</html>
